baseURL: "http://localhost:8000"
title: "Onslaught2342's Blog"
paginate: 5
theme: "PaperMod"

enableRobotsTXT: true
buildDrafts: false
buildFuture: false
buildExpired: false

minify:
  disableXML: true
  minifyOutput: true

params:
  env: production
  title: "Onslaught2342's Blog"
  description: "My blog"
  keywords: ["Blog", "Tech", "Programming"]
  author: "Onslaught2342"
  DateFormat: "January 2, 2006"
  defaultTheme: auto
  disableThemeToggle: false

  ShowReadingTime: true
  ShowShareButtons: true
  ShowPostNavLinks: true
  ShowBreadCrumbs: true
  ShowCodeCopyButtons: true
  ShowWordCount: true
  UseHugoToc: true

  disableSpecial1stPost: false
  disableScrollToTop: false
  comments: false
  hidemeta: false
  hideSummary: false
  showtoc: true
  tocopen: false

  assets:
    favicon: "/img/favicon.ico"
    apple_touch_icon: "/img/apple-touch-icon.png"

  cover:
    hidden: true
    hiddenInList: true
    hiddenInSingle: true

